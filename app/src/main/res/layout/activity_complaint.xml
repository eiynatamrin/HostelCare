<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENT (SCROLLABLE) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TITLE -->
            <TextView
                android:text="COMPLAINT FORM"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- IMAGE PREVIEW -->
            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp"/>

            <!-- CAMERA BUTTON -->
            <Button
                android:id="@+id/btnTakePhoto"
                android:text="Take Photo"
                android:onClick="takePhoto"
                android:background="@drawable/btn_round"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- GALLERY BUTTON -->
            <Button
                android:id="@+id/btnGallery"
                android:text="From Gallery"
                android:onClick="openGallery"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_round"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- COMMENT -->
            <EditText
                android:id="@+id/comment"
                android:hint="Comments (example: broken pipe)"
                android:minLines="3"
                android:gravity="top"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- LOCATION SECTION -->
            <TextView
                android:text="Location (GPS)"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Tap to pin exact location using OpenStreetMap"
                android:textColor="@color/text_dark"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- PIN LOCATION BUTTON -->
            <Button
                android:id="@+id/btnPinLocation"
                android:text="PIN LOCATION"
                android:onClick="openMap"
                android:background="@drawable/btn_round"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- SHOW PINNED LOCATION (UPDATED BY JAVA) -->
            <TextView
                android:id="@+id/txtPinnedLocation"
                android:text="No location selected"
                android:textSize="12sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- SUBMIT BUTTON -->
            <Button
                android:text="SUBMIT COMPLAINT"
                android:onClick="submitComplaint"
                android:background="@drawable/btn_round"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

    <!-- COPYRIGHT (FIXED AT BOTTOM) -->
    <TextView
        android:text="Â© 2026 HostelCare. All rights reserved."
        android:textSize="12sp"
        android:textColor="@color/text_dark"
        android:gravity="center"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
